<h1>Parking</h1>
<div class="row">
  <div class="col-xs-4">
    <p>
      avaiable spaces for cars: <span><%= ParkingSpaces::Car.vacant.size %></span>
    </p>
    <p>
      avaiable spaces for moto: <span><%= ParkingSpaces::Moto.vacant.size %></span>
    </p>
  </div>
</div>

<div class="col-xs-4">
<h2>Hold parking space</h2>
  <%= form_for @vehicle, html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :licence_plate %>
      <%= f.text_field :licence_plate, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :type %>
      <%= select_tag "vehicle[type]", options_for_select([:car, :moto]), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Hold", class: "btn btn-default" %>
    </div>
  <% end %>
</div>

<div class="col-xs-2" ></div>

<div class="col-xs-4">
  <h2>Search your vehicle</h2>

  <div class="searchform">
    <%= form_tag "/search", :method => 'get', html: { class: "form-horizontal" } do %>
      <div class="form-group">
        <%= label_tag 'q', 'Find by licence plate' %>
        <%= text_field_tag :q, params[:q], class: "form-control"%>
      </div>
      <div class="form-group">
        <%= button_tag "Search", name: nil, type: :submit, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>


